{
  "name": "server",
  "packageManager": "yarn@4.6.0",
  "type": "module",
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.13.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.8.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "globals": "^15.15.0",
    "prettier": "^3.5.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "fastify": "^5.2.1",
    "tslib": "^2.8.1"
  },
  "scripts": {
    "lint": "eslint --report-unused-disable-directives --ignore-path './.eslintignore' .",
    "format:check": "prettier --check '**/*.{ts,tsx,js,json}'",
    "format:write": "prettier --write '**/*.{ts,tsx,js,json}'",
    "clean": "tsc -b --clean tsconfig.build.json",
    "build": "tsc -b tsconfig.build.json && tsc-alias -p tsconfig.json",
    "build:clean": "yarn run clean && yarn run build",
    "start": "yarn run build && node dist/main.js",
    "test": "vitest --run",
    "test:unit": "vitest --run src",
    "test:integration": "vitest --run test"
  }
}
